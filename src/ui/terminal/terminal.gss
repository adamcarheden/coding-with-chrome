#{$prefix}terminal-body {
  width: 100%;
  height: 200px;
  flex-direction: column;
  display: flex;
}

#{$prefix}terminal-content {
  flex: 1;
  font-family: "Courier new", "Courier", monospace;
  padding-top: 2px;
  overflow-y: scroll;
}

#{$prefix}terminal-input {
  height: 24px;
  background: #f5f5f5;
  border-top: 1px solid #e5e5e5;
  border-bottom: 1px solid #ebebeb;
  padding: 1px 5px;
}

#{$prefix}terminal-input .mdl-textfield {
  min-width: 90%;
  padding: 0;
}

#{$prefix}terminal-input .mdl-textfield__input {
 font-size: 14px;
}

#{$prefix}terminal-input .material-icons {
  color: #2B78FE;
  vertical-align: middle;
}

#{$prefix}terminal-input .mdl-textfield__label:after {
  bottom: 0;
}

#{$prefix}terminal-button {
  background: transparent;
  border: 0;
  cursor: pointer;
  opacity: 0.7;
}

#{$prefix}terminal-button:hover {
  opacity: 0.9;
}

#{$prefix}terminal-button.error:after {
  background: #f00;
}

#{$prefix}terminal-button.warning:after {
  background: #ffa500;
}

#{$prefix}terminal-button.info:after {
  background: #aaa;
}


/**
 * Terminal entry classes.
 */

.{$prefix}terminal-content-entry {
  border-bottom: 1px solid rgba(0,0,0,0.1);
  padding: 0 5px;
}

.{$prefix}terminal-content-entry > .material-icons {
  font-size: 14px;
  width: 20px;
  vertical-align: middle;
}

.{$prefix}terminal-content-entry-error {
  color: #E81D20;
  background: rgba(255,0,0,0.05);
  border-bottom: 1px solid rgba(255,0,0,0.2);
}

.{$prefix}terminal-content-entry-input {
  color: #000;
}

.{$prefix}terminal-content-entry-output {
  color: #888;
}

.{$prefix}terminal-content-entry-warn {
  background: rgba(255,250,250,0.05);
  border-bottom: 1px solid rgba(255,250,250,0.2);
}

.{$prefix}terminal-content-entry-warn .material-icons {
  color: #fafa00;
}
