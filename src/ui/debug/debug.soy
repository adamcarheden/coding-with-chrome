{namespace cwc.soy.Debug autoescape="strict"}

/**
 * Debug template.
 */
{template .template}
  {@param prefix: string}
  {@param message_types: ?}
  {@param dialog_types: ?}

  <div id="{$prefix}body" class="mdl-dialog">
    <h2 class="mdl-dialog__title">Debug screen</h2>

    <div id="{$prefix}close" class="icon_24px icon_button">close</div>

    <h3>Message Types</h3>
    <select id="{$prefix}message_types">
    {foreach $message_type in keys($message_types)}
      <option value="{$message_type}">{$message_type}</option>
    {/foreach}
    </select>

    <h3>Dialog Types</h3>
    <select id="{$prefix}dialog_types">
    {foreach $dialog_type in keys($dialog_types)}
      <option value="{$dialog_type}">{$dialog_type}</option>
    {/foreach}
    </select>
    <p>
      <button id="{$prefix}dialog_show">show</button>
      <button id="{$prefix}dialog_showModal">showModal</button>
      <button id="{$prefix}dialog_showPrompt">showPrompt</button>
      <button id="{$prefix}dialog_close">close</button>
    </p>

    <h3>i18n</h3>
    <p>
      <button id="{$prefix}i18n_untranslated">Untranslated</button>
    </p>

    <div id="{$prefix}footer">
      Note: Not all features are implemented yet!
    </div>

  </div>
{/template}
